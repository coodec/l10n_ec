<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>

<record id="view_persona_form" model="ir.ui.view">
  <field name="name">view.persona.form</field>
  <field name="model">l10n_ec_sri_ats_16.persona</field>
  <field name="arch" type="xml">
      <form string="Tipo de persona.">
          <sheet>
              <field name="name" />
              <field name="code" />
              <field name="active" />
          </sheet>
      </form>
  </field>
</record>

<record id="view_comprobante_form" model="ir.ui.view">
  <field name="name">view.comprobante.form</field>
  <field name="model">l10n_ec_sri_ats_16.comprobante</field>
  <field name="arch" type="xml">
      <form string="Tipos de comprobante autorizados.">
          <sheet>
              <group string="Información general">
                  <field name="name" />
                  <field name="code" />
                  <field name="active" />
              </group>
              <group string="Sustentos tributarios aplicables">
                  <field name="sustento_ids" nolabel="1"/>
              </group>
          </sheet>
      </form>
  </field>
</record>

<record id="view_identificacion_form" model="ir.ui.view">
  <field name="name">view.identificacion.form</field>
  <field name="model">l10n_ec_sri_ats_16.identificacion</field>
  <field name="arch" type="xml">
      <form string="Tipo de identificación.">
          <sheet>
              <group string="Información general">
                  <field name="name" />
                  <field name="code" />
                  <field name="description" />
                  <field name="active" />
              </group>
              <group string="Códigos para usar en la generación del Anexo Transaccional">
                  <field name="ats_compras" />
                  <field name="ats_ventas" />
              </group>
          </sheet>
      </form>
  </field>
</record>

<record id="view_sustento_form" model="ir.ui.view">
  <field name="name">view.sustento.form</field>
  <field name="model">l10n_ec_sri_ats_16.sustento</field>
  <field name="arch" type="xml">
      <form string="Sustento Tributario.">
          <sheet>
              <field name="name" />
              <field name="code" />
              <field name="description" />
              <field name="active" />
              <group string="Comprobantes aplicables">
                  <field name="comprobante_ids" nolabel="1"/>
              </group>
          </sheet>
      </form>
  </field>
</record>

  </data>
</openerp>
